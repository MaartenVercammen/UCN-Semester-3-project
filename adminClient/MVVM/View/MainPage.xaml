<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="adminClient.MVVM.View.MainPage"
             xmlns:model="clr-namespace:adminClient.MVVM.Model"
             xmlns:viewmodel="clr-namespace:adminClient.MVVM.ViewModel"
             x:DataType="viewmodel:MainPageView"
             >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Welcome to the Admin Client"
                FontSize="Large"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center" />

            <!-- Stat for user -->
            <Label Text="User statistic"/>
            <Label Text="{Binding UserCount}"/>

            <!-- Stat for Bamboo -->
            <Label Text="Bamboo statistic"/>
            <Label Text="{Binding BambooCount}"/>

            <!-- Stat for Recipe -->
            <Label Text="Recipe statistic"/>
            <Label Text="{Binding RecipeCount}"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
