<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="adminClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:adminClient.MVVM.View"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Users"
            ContentTemplate="{DataTemplate view:UsersView}"
            Route="UsersView" />
        <ShellContent
            Title="BambooSession"
            ContentTemplate="{DataTemplate view:BambooSessionOverview}"
            Route="BambooSessionOverview" />
    </FlyoutItem>
    
    

</Shell>
